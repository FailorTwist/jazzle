`getHead(ctx) {
  if !`head { `head = `parseExprHead() }
  var head = `head
  `head = null
  return `head
}

`stmt() {
  `isStmt = true
  if `ttype == TK.ID {
    `head = `prepareExprHead()
    if `foundStmt {
      var head = `head
      `head = null
      `foundStmt = false
