enum CTX {
  CTX_PAT,
  // current expression is a pattern;
  // for paren, it means it is a param-list, and its members can leak simple errors
  // for array/obj, it means its members can leak simple errors

  CTX_PARAM,
  // current expression is a parameter; this flag is always with
  // a CTX_PAT -- that is, it is not an independent flag; its only use is
  // to tell the error tracker to track param-errors

  CTX_NO_SIMPLE_ERR,
  // current expression is not allowed to
  // let any simple error go unhandled; i.e,
  // if the current expression turns out to be
  // simple, flushSimpErrors()
  // for paren, it means it is not a param list, and its members can't leak simple errors
  // for array/obj, it means its members can't leak simple errors

  CTX_HAS_A_PARAM_ERR,
  // current expression need not update
  // the p(t:e:o)

  CTX_HAS_AN_ASSIG_ERR,
  // current expression need not update
  // the a(t:e:o)

  CTX_HAS_A_SIMPLE_ERR,
  // current expression need not update
  // the s(t:e:o)

  ...
}
